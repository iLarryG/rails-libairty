<div class="booking-new">
  <div class="info">
    <h1>Booking details</h1>

    <p> You want to go to :

      <%= @place.name %>
      and you will pay:
      <%= @place.day_price %>
    </p>


    <h3>When do you want to rent it ? </h3>
  </div>
  <%= form_for [@place, @booking] do |f| %>
  <%= f.label :event_date %>
  <%= f.text_field :event_date %>

  <%= f.label :event_time %>
  <%= f.text_field :event_time %>
  <div class="button">
    <%= f.submit "Cancel", :type => "reset", class:"btn btn-treehouse" %>
    <%= f.submit "Confirm", class:"btn btn-treehouse" %>
  </div>
  <% end %>


</div>