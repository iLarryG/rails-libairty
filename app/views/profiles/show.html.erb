
<div class="wrapper">
  <div class="btn-treehouse ">
    <p><%= link_to 'CREATE NEW', new_profile_place_path  %></p>
  </div>
</div>
<h1 class="text-center">Here are your places:</h1>
<div class='product-body'>

  <div class="row">

    <% current_user.places.each do |place| %>
    <div class="col-md-12">

      <div class="products">
        <div class="name_image">
        <%= cl_image_tag place.photo, height: 100, width: 100, crop: :fill, class:"avatar-large" %>
          <h2> <%= place.name %></h2>
        <ul class="list-inline product-controls">
          <li><%= link_to 'see details', profile_place_path(place), style: "btn-medium"  %></li>
          <li> <%= link_to edit_profile_place_path(place), method: :get, data: { confirm: 'Are you sure you want to edit this place?'} do %>
           <i class="fa fa-pencil"></i>
           <% end %>
         </li>
         <li>  <%= link_to profile_place_path(place), method: :delete, data: { confirm: 'Are you sure you want to delete this place?'} do %>
          <i class="fa fa-trash-o"></i>
          <% end %>
        </li>
      </ul>
        </div>

    </div>
  </div>
  <% end %>
</div>
</div>



<h1> Who's coming to your place ? </h1>

<p> <% current_user.places.each do |place| %>
  <% place.bookings.each do |booking| %>
  <%= booking.event_date %>
  <% end %>
  <%= place.name %>
</p>
<%end %>




