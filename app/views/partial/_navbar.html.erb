      </div>
    </a> -->

    <!-- Profile picture and dropdown -->
    <% if signed_in? %>
    <div class="navbar-wagon-item">
      <div class="dropdown">

      <% if current_user.facebook_picture_url %>
    <%= image_tag current_user.facebook_picture_url, class:"avatar", data: { toggle: 'dropdown'} %>


      <% else %>
      <%= image_tag 'placeholder.png', class: "avatar",  data: { toggle: 'dropdown'}  %>

      <% end %>

        <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
          <li>  <%= link_to 'Profile', profile_path %>
          <li>
          <%= link_to "Log Out", destroy_user_session_path, method: :delete %>
          </li>
        </ul>
      </div>
    </div>
    <% else %>
    <%= link_to 'login', new_user_session_path, class: "navbar-wagon-item navbar-wagon-button btn" %>
          <%= link_to "Become a land lord", new_user_registration_path,  class: "navbar-wagon-item navbar-wagon-button btn" %>
    <% end %>

    <!-- Button (call-to-action) -->

  </div>

